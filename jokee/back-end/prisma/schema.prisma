generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Joke {
  id        String   @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  content   String
  Likes     Likes[]
}

model Likes {
  id     String @id
  jokeId String
  userId String
  user   User   @relation(fields: [userId], references: [id])
  joke   Joke   @relation(fields: [jokeId], references: [id])
}

model User {
  id    String  @id
  Likes Likes[]
}
